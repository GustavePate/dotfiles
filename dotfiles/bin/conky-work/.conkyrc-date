background yes

#antialising et font
use_xft yes
xftfont Sans:size=8
xftalpha 1

#update each x seconds
update_interval 0.25

#run forever
total_run_times 0

#for execbar
default_bar_size 80 5

#needs compositing enabled in window manager
own_window yes
own_window_transparent yes
own_window_argb_visual yes
own_window_type desktop
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes

minimum_size 340 340
maximum_width 350
text_buffer_size 2048

draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no

default_color white
default_shade_color black
default_outline_color white




alignment tl

gap_x 50
gap_y 950
no_buffers yes
uppercase no
cpu_avg_samples 1
override_utf8_locale yes
#white
color1          dddddd
color2          aaaaaa
color3          cccccc

#color1         	caeae5 	#white (blue tint)
#color2         	40788c 	#key
#color3         	68b1b8 	#value
color4         	68b1b8 	#bar
color5         	a80022 	#red
color6         	496388 	#light marine blue
color7         	5A7499 	#lighter marine blue
color8		6d8390 	#light grey
color9		30393f	#dark grey

default_color FFFFFF

TEXT
